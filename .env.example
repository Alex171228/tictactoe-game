# Copy to .env and fill values (DO NOT COMMIT .env)
NODE_ENV=production
PORT=443
SITE_URL=https://asukaeva2.com

# Telegram bot
TELEGRAM_BOT_TOKEN=PASTE_YOUR_TOKEN_HERE

# Optional: protect /api/auth/code so only the bot can call it
AUTH_BOT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING
AUTH_CODE_TTL_SECONDS=300

# HTTPS certificates (Cloudflare Origin or Let's Encrypt)
SSL_CERT_PATH=/etc/ssl/cloudflare/origin.pem
SSL_KEY_PATH=/etc/ssl/cloudflare/origin.key
# SSL_CA_PATH=/path/to/ca.pem
